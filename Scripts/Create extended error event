/* Create extended event */


IF EXISTS (SELECT name FROM sys.dm_xe_sessions  WHERE name = 'Error Handling Session(Datawarehouse)')
DROP EVENT SESSION [Error Handling Session(Datawarehouse)] ON SERVER
GO


CREATE EVENT SESSION [Error Handling Session(Datawarehouse)] ON SERVER
ADD EVENT sqlserver.error_reported(
ACTION(sqlserver.session_id,sqlserver.sql_text)
WHERE ([package0].[not_equal_unicode_string]([message],N'''''') AND [package0].[greater_than_int64]([severity],(10)) AND [sqlserver].[database_name]=N'$(DatabaseName)'))
ADD TARGET package0.ring_buffer
WITH (MAX_MEMORY=4096 KB,EVENT_RETENTION_MODE=ALLOW_SINGLE_EVENT_LOSS,MAX_DISPATCH_LATENCY=1 SECONDS,MAX_EVENT_SIZE=0 KB,MEMORY_PARTITION_MODE=NONE,TRACK_CAUSALITY=ON,STARTUP_STATE=OFF)
GO

ALTER EVENT SESSION [Error Handling Session(Datawarehouse)]
   ON SERVER  
   STATE = START;  
GO
